<div data-project-gist-gelement-editor="">

	<div data-ng-if="!localization.inTranslation()">

		<rbs-field-text property="label" required="true"
				label="{{ i18nAttr(propertyKey('Project_Gist_GElement', 'label'), ['ucf']) }}">
		</rbs-field-text>

		<rbs-field property="pDocumentArray" label="{{ i18nAttr(propertyKey('Project_Gist_GElement', 'pDocumentArray'), ['ucf']) }}">
			<rbs-document-picker-multiple ng-model="document.pDocumentArray"  accepted-model="Rbs_Media_Image"
					property-label="PDocumentArray" context-key="(= getContextKey() =)_pDocumentArray">
			</rbs-document-picker-multiple>
		</rbs-field>

		<rbs-field property="pDocument" label="{{ i18nAttr(propertyKey('Project_Gist_GElement', 'pDocument'), ['ucf']) }}">
			<rbs-document-picker-single ng-model="document.pDocument" accepted-model="Rbs_Media_Image"
					property-label="PDocument" context-key="(= getContextKey() =)_pDocument">
			</rbs-document-picker-single>
		</rbs-field>

		<rbs-field-rich-text property="pRichText"
				label="{{ i18nAttr(propertyKey('Project_Gist_GElement', 'pRichText'), ['ucf']) }}">
		</rbs-field-rich-text>
	</div>

	<rbs-field property="lString"
			label="{{ i18nAttr(propertyKey('Project_Gist_GElement', 'lString'), ['ucf']) }}">
		<input type="text" name="lString" class="form-control" ng-model="document.LCID[localization.currentLCID()].lString" />
	</rbs-field>

	<rbs-field property="lRichText"
			label="{{ i18nAttr(propertyKey('Project_Gist_GElement', 'lRichText'), ['ucf']) }}">
		<rbs-rich-text-input ng-model="document.LCID[localization.currentLCID()].lRichText" ></rbs-rich-text-input>
	</rbs-field>
</div>